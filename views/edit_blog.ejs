<div class="container mt-5 ">
<div class="jumbotron jumbotron-fluid p-5 op">
  
    <h1 class="display-4 text-center mb-4 text-white">Edit Post
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    </h1>
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST" class="text-white">
        <div class="field">
            <label >Title</label>
            <div>
                <input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>" required>
            </div><br>
            
        </div>
        <div class="field">
            <label>Image</label>
            <div>
                <input type="text" class="form-control" name="blog[image]" value="<%= blog.title %>" required>
            </div>
            <br>
            
        </div>
        <div class="field">
            <label>Post Content</label>
            <div>
                <textarea name="blog[body]" required><%= blog.body %></textarea>
            </div>
            <br>
            
        </div>
        <div class="text-center">
            <button class="btn btn-success">Edit Post</button>
        </div>
    </form>
    
  </div>
</div>
</div>
