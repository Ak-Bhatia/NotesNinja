				<th scope="col">Download</th>
				<th scope="col">Pages</th>
				<th scope="col">Edit Price</th>
	     </tr>
	  </thead>
	  <tbody>
	  	<%var count = 1%>
	  	<%infoDone.forEach(function(element){%>
        <tr>
					<th scope="row"><%=count%></th>
        	<td><%=element.code%></td>
        	<td><%=element.title.toUpperCase();%></td>
					<td><%=element.created.toDateString()%></td>
					<td><%=element.subject.toUpperCase()%></td>
					<td><a href="/home/<%=element._id %>/download">Download Pdf</a></td>
					<td><%=element.pages%></td>
					<td><a href="/shopkeeper/<%=element._id%>/edit">Edit Price</a></td>
           <%count+=1%>
	    </tr>
        <%})%>

	  </tbody>
	</table>
</div>
<%if(noMatch !== null){%>
  <h4 class="text-center"><%=noMatch%></h4>
  <%}%>
</div>



